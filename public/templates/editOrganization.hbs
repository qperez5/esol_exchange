<div class="panel panel-primary bs-example">
    <div class="panel-heading">Edit Organization</div>
    <div class="bs-example">
        <div class="row">
            <p class="has-error pull-right"> {{errors.name}} {{errors.address}} {{errors.post_code}} {{errors.contact_number}}  {{errors.contact_email}}</p>
        </div>
        <form>

            <div class="row">
                <div class="col-xs-4 ">
                    <div {{bind-attr class="form-group errors.name:has-error errors.name:has-feedback"}}>
                        <label class="control-label " for="name">Name</label>
                        <span  class=" glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        <span id="inputError2Status" class="sr-only"></span>
                         {{input type="text" value=name class="form-control" id="name" aria-describedby="inputError2Status"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div {{bind-attr class="form-group errors.contact_number:has-error errors.contact_number:has-feedback"}}>
                        <label for="contact_number">Contact Number</label>
                        <span  class=" glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        <span id="inputErrorContacNumberStatus" class="sr-only"></span>
                        {{input  type="text" value=contact_number class="form-control" id="contact_number" aria-describedby="inputErrorContacNumberStatus"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="contact_person">Contact Person</label>
                        {{input type="text" value=contact_person class="form-control" id="contact_person"}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div {{bind-attr class="form-group errors.address:has-error errors.address:has-feedback"}}>
                        <label for="address">Address</label>
                        <span  class=" glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        <span id="inputErrorAddressStatus" class="sr-only"></span>
                        {{input type="text" value=address class="form-control" id="address" aria-describedby="inputErrorAddressStatus"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div {{bind-attr class="form-group errors.post_code:has-error errors.post_code:has-feedback"}}>
                        <label for="post_code">Post Code</label>
                        <span  class=" glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        <span id="inputErrorPostcodeStatus" class="sr-only"></span>
                        {{input type="text" value=post_code class="form-control" id="post_code" aria-describedy="inputErrorPostcodeStatus"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="esol_assesment">ESOL assessment</label>
                            {{input type="text" value=esol_assesment class="form-control" id="esol_assesment"}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="contact_web">Contact Web</label>
                        {{input type="text" value=contact_web class="form-control" id="contact_web"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div {{bind-attr class="form-group errors.contact_email:has-error errors.contact_email:has-feedback"}}>
                        <label for="contact_mail">Email</label>
                        <span  class=" glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        <span id="inputErrorContactEmailStatus" class="sr-only"></span>
                        {{input type="text" value=contact_email class="form-control" id="contact_email" aria-describedby="inputErrorContactEmailStatus"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="referral_system">Referral System</label>
                        {{input type="text" value=referral_system class="form-control" id="referral_system"}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="tutors_qualified">Tutors Qualified?</label>
                        {{view "select"
                        id="tutors_qualified"
                        value=tutors_qualified
                        classNames="form-control"
                        content=yesNoConditionedOptions
                        optionLabelPath="content.label"
                        optionValuePath="content.value"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="tutors_qualified_condition">Any condition about tutors</label>
                        {{textarea disabled=tutorsQualifiedNotConditioned rows="2" type="text" value=tutors_qualified_condition
                        class="form-control textareaScroll" id="tutors_qualified_condition"}}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="how_acreditated">About acreditation</label>
                        {{input type="text" value=how_acreditated class="form-control" id="how_acreditated"}}
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col-xs-4">
                <div class="form-group">
                    <label for="courses_acreditated">Courses Acreditated?</label>
                    {{view "select"
                    id="courses_acreditated"
                    value=courses_acreditated
                    classNames="form-control"
                    content=yesNoConditionedOptions
                    optionLabelPath="content.label"
                    optionValuePath="content.value"}}
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label for="courses_acreditation_condition">Any condition about courses accreditation?</label>
                    {{textarea disabled=coursesAcreditationNotConditioned rows="2" type="text" value=courses_acreditation_condition
                    class="form-control textareaScroll" id="courses_acreditation_condition"}}
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label for="classes_outside_newham">Classes outside Newham?</label>
                    {{input type="text" value=classes_outside_newham class="form-control" id="classes_outside_newham"}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <div class="form-group">
                    <label for="core_curriculum">Core curriculum</label>
                    {{view "select"
                    id="core_curriculum"
                    value=core_curriculum
                    classNames="form-control"
                    content=yesNoConditionedOptions
                    optionLabelPath="content.label"
                    optionValuePath="content.value"}}
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label for="core_curriculum_condition">Any condition about core curriculum?</label>
                    {{textarea disabled=coreCurriculumNotConditioned rows="2" type="text" value=core_curriculum_condition
                    class="form-control textareaScroll" id="core_curriculum_condition"}}
                </div>
            </div>
            <div class="col-xs-4">
                <label for="other_information">Other information</label>
                {{textarea rows="2" type="text" value=other_information
                class="form-control textareaScroll" id="other_information"}}
            </div>
        </div>
    </form>

    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="pull-right rightMargin">
                <div class="col-xs-8">
                    <button class="btn btn-danger btn-lg" {{action "cancel"}}>Cancel</button>
            </div>
            <div class="col-xs-4">
                <button class="btn btn-primary btn-lg" {{action "save"}}>Save</button>
            </div>
        </div>
    </div>
</div>




